check process postgresql with pidfile /var/lib/postgres/data/postmaster.pid
    group database
    start program = "/usr/bin/systemctl start postgresql"
    stop  program = "/usr/bin/systemctl stop postgresql"
    if failed host 127.0.0.1 port 5432 protocol pgsql then restart
    if failed unixsocket /run/postgresql/.s.PGSQL.5432 protocol pgsql then restart
    if cpu usage > 80% for 5 cycles then alert
    if memory usage > 80% for 5 cycles then alert
    if 5 restarts within 5 cycles then timeout
