check process ocis with pidfile /var/run/ocis.pid
  start program = "/usr/bin/systemctl start ocis"
  stop program = "/usr/bin/systemctl stop ocis"
  if failed port 9200 protocol http then restart
  if cpu > 70% for 5 cycles then alert
  if memory > 1 GB for 3 cycles then restart
  if loadavg (1min) > 4 for 3 cycles then alert